<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_green_light"
    android:orientation="vertical"
    tools:context="frasesdodia.carolinamaci3l.com.frasedodia_v1.MainActivity">

    <Button
        android:id="@+id/botaoNovaFraseId"
        android:layout_width="306dp"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@color/colorAccent"
        android:text="@string/texto_frase_dia"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="40dp" />

    <TextView
        android:id="@+id/textoNovaFraseId"
        android:layout_width="290dp"
        android:layout_height="43dp"
        android:layout_marginLeft="50dp"
        android:text="Large Text"
        android:textColor="@android:color/background_dark"
        android:textSize="@dimen/texto_frase_do_dia"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="117dp" />
</LinearLayout>
